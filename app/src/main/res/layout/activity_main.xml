<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_view_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:gravity="center"
    tools:context="com.example.zwr.hookviewlistenerdemo.MainActivity">

    <TextView
        android:id="@+id/tv_click_hello"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:text="Hello World!"/>

    <TextView
        android:id="@+id/tv_click_me"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:text="click me!"/>

    <TextView
        android:id="@+id/tv_long_click_me"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:text="long click me!"/>

    <com.example.zwr.hookviewlistenerdemo.widget.PullToRefreshListView
        android:id="@+id/lv_click_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></com.example.zwr.hookviewlistenerdemo.widget.PullToRefreshListView>
</LinearLayout>
